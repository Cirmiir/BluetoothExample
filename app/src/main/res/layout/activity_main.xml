<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kirmiir.bluetoothexample.MainActivity"
    android:background="@color/colorPrimary">

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="on"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/onbutton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="open"
        android:textColor="#fff"
        android:layout_marginBottom="50dp"
        android:id="@+id/openbutton"
        android:layout_above="@+id/onbutton"
        android:layout_toEndOf="@+id/onbutton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="blackout"
        android:textColor="#fff"
        android:id="@+id/blackoutbutton"
        android:layout_alignTop="@+id/openbutton"
        android:layout_toStartOf="@+id/onbutton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="off"
        android:textColor="#fff"
        android:id="@+id/offbutton"
        android:layout_alignTop="@+id/openbutton"
        android:layout_toStartOf="@+id/openbutton"
        android:layout_marginEnd="25dp"
        android:alpha="0.0" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="ptt"
        android:textColor="#fff"
        android:id="@+id/pttbutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/blackoutbutton"
        android:text="disconnect"
        android:editable="false"
        android:inputType="none" />
</RelativeLayout>
